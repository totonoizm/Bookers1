<Strong>Editing Book</Strong>
  <% if @book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <%= @book.errors.count %>errors prohibited this book from being saved
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model:@book, local: true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <h4>
    <%= link_to "Show", book_path(@book) %>|<!--@モデル名で現在参照しているデータにとぶ-->
    <%= link_to "Back", books_path %>  <!--rake routes でurlがわかる-->
  </h4>

<% end %>