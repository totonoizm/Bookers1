<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="alert">
      <ul>
        <%= @book.errors.count %>errors prohibited this book from being saved
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div>
  <%= form_with model:@book, local: true do |f| %>
    <div>
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div>
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Update Book' %>
    </div>
    <div>
      <p>
        <%= link_to "Show", book_path(@book) %> |<!--@モデル名で現在参照しているデータにとぶ-->
        <%= link_to "Back", books_path %>  <!--rake routes でurlがわかる-->
      </p>
    </div>
  <% end %>
</div>