<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>   <!--テキストのみの表示の仕方を考える--??-->
      <td><%= book.body %></td>
      <td><%= "showbot" %></td>
      <td><%= "showbot" %></td>
      <td><%= "showbot" %></td>
    </tr>
  <% end %>
</table>


<h1>New book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>